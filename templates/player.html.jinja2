{% extends "base.html.jinja2" %}

{% block content %}
<!-- page content -->
    <div id="page-nickname" class="container active">
    	<div class="content">
    		<p class="instructions">Καλωσήρθες! </br> Πως να σε συστήσω;</p>
    		<div class="c-formContainer">
				<form class="c-form" autocomplete="off" action="">
			    	<input id="nickname" class="c-form__input" placeholder="Όνομα" type="text" pattern="[A-Za-zΑ-Ωα-ω0-9άέίϊΐόήώύϋΰΆΈΊΪΌΉΏΎΫς\s]{1,30}$" required>
					<label class="c-form__buttonLabel">
	      				<button id="setname" class="c-form__button" type="button">ΟΚ</button>
					</label>
				</form>
			</div>
    	</div>
    </div>
    <div id="page-waiting-room" class="container">
    	<div class="content">
    		<p class="instructions"></p>
			<img id="loading-icon" width="64px" src="{{ url_for('static', path='/loader.gif') }} ">
			<p class="notes"></p>
			<div id="button-invitation" class="c-fake-button">
				<p></p>
			</div>
    	</div>
    </div>
    <div id="page-game" class="container">
    	<div class="content">
			<div id="mycanvas">
				<div id="eggsanimated01_hype_container" class="HYPE_document" style="margin:auto;position:relative;width:100%;height:100%;overflow:hidden;">
					<script type="text/javascript" charset="utf-8" src=" {{ url_for('static', path='/eggs_animated01.hyperesources/eggsanimated01_hype_generated_script.js?47843') }} "></script>
				</div>
			</div>

    	</div>
    </div>
	<div id="page-results" class="container">
    	<div class="content">
    		<p class="instructions">Χριστός Ανέστη!</p>
    		<div id="cards-container">
				<div style="display:none;" class="template">
					<p class="versus-title"></p>
					<p class="tag-line"></p>
					<img class="egg-result egg-champion" width="320px" src="{{ url_for('static', path='/egg_champion_s.png') }} ">
					<img class="egg-result egg-cracked-tip" width="320px" src="{{ url_for('static', path='/egg_cracked_tip_s.png') }} ">
					<img class="egg-result egg-cracked-butt" width="320px" src="{{ url_for('static', path='/egg_cracked_butt_s.png') }} ">
					<img class="egg-result egg-cracked-both" width="320px" src="{{ url_for('static', path='/egg_cracked_both_s.png') }} ">
				</div>
			</div>
			<div id="button-new-invitation" class="c-fake-button">
				<p>Νεα Αναμέτρηση</p>
			</div>
    	</div>
	</div>
	<div id="page-error" class="container">
		<div class="content">
			<p class="instructions">error page</p>
			<div id="button-reset" class="c-fake-button">
				<p>Αρχική Σελίδα</p>
			</div>
		</div>
	</div>
	<div class="share-container" style="">
		<div class="share-dialog">
			<header>
				<h3 class="dialog-title">Στείλτε τον παρακάτω σύνδεσμο</h3>
				<button class="close-button"><svg><use href="#close"></use></svg></button>
			</header>
			<div class="link">
				<div class="export-url"><input type="text" id="copied-url"></div>
				<button class="copy-link">Αντιγραφή</button>
			</div>
		</div>
		<!--- ToDo: add share app button value="Τσούγκρισε αυγά με την παρέα σου με λίγα μόλις κλικ ανοίγοντας το tsougkrizo! {{ url_for("get") }} -->

		<!-- <button class="share-button" type="button" title="Συνδέσμος Πρόσκλησης">
		<svg>
			<use href="#share-icon"></use>
		</svg>
		<span>Share</span>
		</button>-->

		<svg class="hidden">
		<defs>
			<symbol id="share-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-share"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path><polyline points="16 6 12 2 8 6"></polyline><line x1="12" y1="2" x2="12" y2="15"></line></symbol>

			<symbol id="close" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-square"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="9" y1="9" x2="15" y2="15"></line><line x1="15" y1="9" x2="9" y2="15"></line></symbol>
		</defs>
		</svg>
	</div>
{% endblock %}
{% block last %}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
</script>
  <script src="{{ url_for('static', path='/script.js') }}"></script>
{% endblock %}