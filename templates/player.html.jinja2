{% extends "base.html.jinja2" %}

{% block content %}
	<a href="#" class="lang-switch" data-locale="en">English</a> |
    <a href="#" class="lang-switch" data-locale="el">Ελληνικά</a>

<!-- page content -->
    <div id="page-nickname" class="container active">
		<div class="logo">
			<img id="tsougkrisma-logo" width="100%" src="{{ url_for('static', path='/logo_lowres.svg') }} ">
		</div>
    	<div class="content">
    		<p class="instructions" data-i18n="[html]instructions"></p>
    		<div class="c-formContainer">
				<form class="c-form nameform" autocomplete="off" action="">
			    	<input autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false"id="nickname" class="c-form__input" placeholder="{{ name }}" type="text" pattern="[A-Za-zΑ-Ωα-ω0-9άέίϊΐόήώύϋΰΆΈΊΪΌΉΏΎΫς\s]{1,30}$" required>
					<label class="c-form__buttonLabel">
	      				<button id="setname" class="c-form__button" type="button">ΟΚ</button>
					</label>
				</form>
			</div>
    	</div>
		<div class="titroo-banner">
			<a href="https://www.titroo.com/" target="_blank "><img src="{{ url_for('static', path='/banner01.jpg') }} "></a>
		</div>
    </div>
    <div id="page-waiting-room" class="container">
    	<div class="content">
    		<p class="instructions"></p>
			<img id="loading-icon" width="64px" src="{{ url_for('static', path='/loader.gif') }} ">
			<p class="notes"></p>
			<div id="button-invitation" class="c-fake-button">
				<p></p>
			</div>
    	</div>
    </div>
    <div id="page-game" class="container">
    	<div class="content">
			<div id="mycanvas">
				<div id="eggsanimated01_hype_container" class="HYPE_document" style="margin:auto;position:relative;width:100%;height:100%;overflow:hidden;">
					<script type="text/javascript" charset="utf-8" src=" {{ url_for('static', path='/eggs_animated01.hyperesources/eggsanimated01_hype_generated_script.js?47843') }} "></script>
				</div>
			</div>

    	</div>
    </div>
	<div id="page-results" class="container">
    	<div class="content">
    		<p class="instructions chr-ane" data-i18n="easter-wish"></p>
    		<div id="cards-container">
				<div style="display:none;" class="template">
					<p class="versus-title"></p>
					<p class="tag-line"></p>
					<img class="egg-result egg-champion" width="280px" src="{{ url_for('static', path='/egg_champion_s.png') }} ">
					<img class="egg-result egg-cracked-tip" width="280px" src="{{ url_for('static', path='/egg_cracked_tip_s.png') }} ">
					<img class="egg-result egg-cracked-butt" width="280px" src="{{ url_for('static', path='/egg_cracked_butt_s.png') }} ">
					<img class="egg-result egg-cracked-both" width="280px" src="{{ url_for('static', path='/egg_cracked_both_s.png') }} ">
				</div>
			</div>
			<div class="horizontal-buttons">
				<div id="button-new-invitation" class="c-fake-button">
					<p data-i18n="new-confrontation"></p>
				</div>
				<div id="button-play-link-results" class="c-fake-button">
					<p><svg><use href="#play-link-icon"></use></svg></p>
				</div>
			</div>
    	</div>
	</div>
	<div id="page-error" class="container">
		<div class="content">
			<p class="instructions">error page</p>
			<div id="button-reset" class="c-fake-button">
				<p> {{home_page}} </p> 
			</div>
		</div>
	</div>
	<div class="play-link-container" style="">
		<div class="play-link-dialog">
			<header>
				<h3 class="dialog-title" data-i18n="send-link"></h3>
				<button class="close-button"><svg><use href="#close"></use></svg></button>
			</header>
			<div class="link">
				<div class="export-url"><input type="text" id="copied-url"></div>
				<button class="copy-link"> {{copy}} </button> 
			</div>
		</div>

		<svg class="hidden">
