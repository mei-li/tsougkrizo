{% extends "base.html.jinja2" %}

{% block switchmmeta %}
    <meta charset="utf-8">
    <title>Τσουγκρίζω Πασχαλινό Αυγό - Αποτελέσματα</title>
    <meta name="description" content="Τα αποτελέσματα του τσουγκρίσματος μου">
    <!-- OG Meta Tags to improve the way the post looks when you share the page on LinkedIn, Facebook, Google+ -->
    <meta property="og:site_name" content="Τσούγκρισμα"> <!-- website name -->
    <meta property="og:site" content="{{ url_for('host') }}"> <!-- website link -->
    <meta property="og:title" content="Αποτελέσματα Τσουγκρίσματος"> <!-- title shown in the actual shared post -->
    <meta property="og:description" content="Μάθε ποιό αυγό έσπασε και ποιό επικράτησε στο τσούγκρισμα!"> <!-- description shown in the actual shared post -->
    <meta property="og:image" content="{{ url_for('static', path='/ogimage.jpg') }}">
    <meta property="og:url" content="{{ url_for('host') }}"> <!-- where do you want your post to link to -->
    <meta property="og:type" content="article">
{% endblock %}

